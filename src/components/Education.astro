<section id="education" class="py-32 px-6">
  <div class="max-w-5xl mx-auto">
    <h2 class="reveal text-sm font-mono text-accent uppercase tracking-widest mb-2">Education & Certifications</h2>
    <p class="reveal text-3xl sm:text-4xl font-bold text-text mb-4">Credentials</p>
    <div class="lightsaber-line w-20 mb-16 reveal"></div>

    <!-- Education -->
    <div class="grid md:grid-cols-2 gap-6 mb-12">
      {education.map((edu) => (
        <div class="reveal p-6 rounded-2xl border border-border bg-surface/50 card-hover">
          <div class="text-3xl mb-3">{edu.emoji}</div>
          <h3 class="text-base font-bold text-text mb-1">{edu.title}</h3>
          <p class="text-sm text-accent font-mono mb-1">{edu.institution}</p>
          <p class="text-xs text-text-muted">{edu.period}</p>
          {edu.detail && <p class="text-xs text-accent-alt mt-2 font-mono">{edu.detail}</p>}
        </div>
      ))}
    </div>

    <!-- Certifications -->
    <h3 class="reveal text-xs font-mono text-accent-alt uppercase tracking-widest mb-6">Certifications</h3>
    <div class="flex flex-wrap gap-3 mb-12">
      {certs.map((c) => (
        <div class="reveal-scale px-4 py-2 rounded-lg border border-border bg-surface/50 card-hover">
          <span class="text-sm text-text">{c.name}</span>
          {c.year && <span class="text-xs text-text-muted font-mono ml-2">{c.year}</span>}
        </div>
      ))}
    </div>

    <!-- Awards -->
    <h3 class="reveal text-xs font-mono text-accent-alt uppercase tracking-widest mb-6">Awards</h3>
    <div class="flex flex-wrap gap-3">
      {awards.map((a) => (
        <div class="reveal-scale px-4 py-2 rounded-lg border border-accent/20 bg-accent/5">
          <span class="mr-2">{a.emoji}</span>
          <span class="text-sm text-text">{a.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>
